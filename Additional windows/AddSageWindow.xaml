<Window x:Class="ADO.NET_Homework_3.Additional_windows.AddSageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET_Homework_3.Additional_windows"
        mc:Ignorable="d" ResizeMode="CanMinimize"
        Title="AddSageWindow" Height="601" Width="554">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Name="DescriptionLabel" Content="Add new sage" FontSize="25" 
               FontWeight="DemiBold" Margin="30, 15" VerticalAlignment="Center"/>

        <Label Content="Name" FontSize="20" Grid.Row="1"
               Margin="30, 10" VerticalAlignment="Center"/>
        <Label Content="Birthday" FontSize="20" Grid.Row="2"
               Margin="30, 10" VerticalAlignment="Center"/>

        <TextBox Name="NameTextBox" Grid.Row="1" Grid.Column="1"
                 Padding="10, 4" Margin="15"/>
        <DatePicker Name="BirthdayPicker" Grid.Row="2" Grid.Column="1"
                 Padding="10, 4" Margin="15"/>

        <Image Name="SageImg" Grid.Row="3" Grid.ColumnSpan="2" Margin="60, 20"/>
        <Button Name="SelectImgButton" Content="Select image"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Grid.Row="4" Grid.ColumnSpan="2" Padding="15, 4"
                FontSize="14" Margin="10" Click="SelectImgButton_Click"/>

        <Button Name="OKButton" Content="OK"
                VerticalAlignment="Center" HorizontalAlignment="Right"
                Grid.Row="5" Padding="25, 4" FontSize="14" Margin="10" Click="OKButton_Click"/>
        <Button Name="CancelButton" Content="Cancel" Grid.Column="1"
                VerticalAlignment="Center" HorizontalAlignment="Left"
                Grid.Row="5" Padding="15, 4" FontSize="14" Margin="10" Click="CancelButton_Click"/>
    </Grid>
</Window>
